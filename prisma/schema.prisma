// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  password  String
  PartyList PartyList[]
}

model Member {
  id           Int       @id @default(autoincrement())
  memberName   String    @unique
  memberPicked String?    @unique
  partylist    PartyList @relation(fields: [partyName], references: [name])
  partyName    String
}

model PartyList {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  image      String
  owner      User     @relation(fields: [partyOwner], references: [username])
  partyOwner String
  Member     Member[]
}
