extends layout

block content

    div(class="main")
        div(class="container")
            div(class="cookie-login")
                img(class="image" src="/images/BigBoy.png" alt="BigBoy" height="398px")
            div(class="candycane-login")
                img(class="image" src="/images/CandyCane.png" alt="CandyCane" height="982px")
            
            div(class="fieldsetbox")
                form(action="/register", method="post")
                    p(class="fieldsettitle") Register
                    div 
                        p(class="p-label") What is your username?
                    div
                        input(type="text", name="userName")
                    div 
                        p(class="p-label") Silently type in your password?
                    div
                        input(type="password", name="pass")
                    div
                        p(class="p-label") Silently type in your password again?
                    div
                        input(type="password", name="confirm_pass")
                    div(class="login-signup")
                        button(type='submit', class="button-signupR") Sign Up 
                        |
                        p(class="p-label") or
                        |
                        a(href="/", class="button-loginR") Login
            div(class="stamp")
                img(class="image" src="/images/Stamp.png" alt="Homepage" width="100px" )